{
  "map_enabled": true,
  "auto_pin_capturing_locations": true,
  "auto_unpin_on_clear": true,
  "layout_swap_left_right": false,
  "disabled_image_filter": "grayscale, dim",
  "layouts": {
    "shared_item_grid": {
      "type": "array",
      "orientation": "vertical",
      "margin": "0,0",
      "content": [
        {
          "type": "array",
          "orientation": "horizontal",
          "margin": "0,0",
          "content": [
            {
              "type": "itemgrid",
              "item_margin": "6,1",
              "h_alignment": "left",
              "rows": [
                [ "ridley",   "charge", "varia",   "morph",  "hijump" ],
                [ "phantoon", "ice",    "gravity", "bomb",   "space" ],
                [ "kraid",    "wave",   "",        "spring", "speed" ],
                [ "draygon",  "spazer", "grapple", "screw",  "" ],
                [ "",         "plasma", "xray",    "",       "" ]
              ]
            },
            {
              "type": "array",
              "orientation": "vertical",
              "v_alignment": "center",
              "margin": "5,0,0,0",
              "content": [
                {
                  "type": "itemgrid",
                  "margin": "0,0",
                  "item_margin": "2,0",
                  "h_alignment": "center",
                  "rows": [
                    [ "missile", "supermissile", "powerbomb" ]
                  ]
                },
                {
                  "type": "itemgrid",
                  "margin": "0,4,0,0",
                  "item_margin": "2,0",
                  "h_alignment": "center",
                  "rows": [
                    [ "etank", "reservetank" ]
                  ]
                },
                {
                  "type": "item",
                  "item": "difficulty",
                  "h_alignment": "center",
                  "margin": "0,16,0,0"
                }
              ]
            }
          ]
        }
      ]
    },

    "tracker_capture_item": {
      "type": "container",
      "content": {
        "type": "layout",
        "key": "shared_item_grid"
      }
    },
    "tracker_default": {
      "type": "container",
      "background": "#000000",
      "content": {
        "type": "dock",
        "dropshadow": true,
        "content": [
          {
            "type": "dock",
            "dock": "left",
            "v_alignment": "stretch",
            "content": [
              {
                "type": "group",
                "header": "Items",
                "dock": "top",
                "content": {
                  "type": "layout",
                  "key": "shared_item_grid"
                }
              },
              {
                "type": "group",
                "header": "Pinned Locations",
                "content": {
                  "type": "recentpins",
                  "style": "wrap",
                  "h_alignment": "stretch",
                  "v_alignment": "stretch",
                  "orientation": "vertical",
                  "compact": true
                }
              }
            ]
          },
          {
            "type": "tabbed",
            "tabs": [
              {
                "title": "Full Map",
                "icon": "images/icon_zebes.png",
                "content": {
                  "type": "map",
                  "maps": [
                    "fullmap"
                  ]
                }
              },
              {
                "title": "Crateria",
                "icon": "images/icon_starship.png",
                "content": {
                  "type": "map",
                  "maps": [
                    "crateriamap"
                  ]
                }
              },
              {
                "title": "Brinstar",
                "icon": "images/icon_etecoon.png",
                "content": {
                  "type": "map",
                  "maps": [
                    "brinstarmap"
                  ]
                }
              },
              {
                "title": "Norfair",
                "icon": "images/icon_norfair_statue.png",
                "content": {
                  "type": "map",
                  "maps": [
                    "norfairmap"
                  ]
                }
              },
              {
                "title": "Wrecked Ship",
                "icon": "images/icon_robot.png",
                "content": {
                  "type": "map",
                  "maps": [
                    "wreckedshipmap"
                  ]
                }
              },
              {
                "title": "Maridia",
                "icon": "images/icon_minidraygon.png",
                "content": {
                  "type": "map",
                  "maps": [
                    "maridiamap"
                  ]
                }
              }
            ]
          }
        ]
      }
    },
    "tracker_horizontal": {
      "type": "container",
      "background": "#000000",
      "content": {
        "type": "dock",
        "dropshadow": true,
        "content": [
          {
            "type": "dock",
            "dock": "bottom",
            "content": [
              {
                "type": "group",
                "header": "Items",
                "dock": "left",
                "margin": "0,0,3,0",
                "content": {
                  "type": "layout",
                  "h_alignment": "center",
                  "v_alignment": "center",
                  "key": "shared_item_grid"
                }
              },
              {
                "type": "group",
                "header": "Pinned Locations",
                "content": {
                  "type": "recentpins",
                  "style": "wrap",
                  "h_alignment": "stretch",
                  "v_alignment": "stretch",
                  "orientation": "horizontal",
                  "compact": true
                }
              }
            ]
          },
          {
            "type": "tabbed",
            "tabs": [
              {
                "title": "Full Map",
                "icon": "images/icon_zebes.png",
                "content": {
                  "type": "map",
                  "maps": [
                    "fullmap"
                  ]
                }
              },
              {
                "title": "Crateria",
                "icon": "images/icon_starship.png",
                "content": {
                  "type": "map",
                  "maps": [
                    "crateriamap"
                  ]
                }
              },
              {
                "title": "Brinstar",
                "icon": "images/icon_etecoon.png",
                "content": {
                  "type": "map",
                  "maps": [
                    "brinstarmap"
                  ]
                }
              },
              {
                "title": "Norfair",
                "icon": "images/icon_norfair_statue.png",
                "content": {
                  "type": "map",
                  "maps": [
                    "norfairmap"
                  ]
                }
              },
              {
                "title": "Wrecked Ship",
                "icon": "images/icon_robot.png",
                "content": {
                  "type": "map",
                  "maps": [
                    "wreckedshipmap"
                  ]
                }
              },
              {
                "title": "Maridia",
                "icon": "images/icon_minidraygon.png",
                "content": {
                  "type": "map",
                  "maps": [
                    "maridiamap"
                  ]
                }
              }
            ]
          }
        ]
      }
    }
  }
}
